{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "#frontend/*": ["./src/*"],
      "#backend/*": ["../backend/src/*"]
    },
    "customConditions": ["production"],
    "outDir": "dist"
  },
  "include": ["./src/**/*"],
  "references": [
    {
      "path": "../backend"
    }
  ]
}

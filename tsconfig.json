{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "#backend/*": ["backend/src/*"],
      "#frontend/*": ["frontend/src/*"],
      "#shared/*": ["shared/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "lib": ["DOM", "ESNext"],
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./*/src"],
  "references": [
    {
      "path": "./backend"
    },
    {
      "path": "./frontend"
    }
  ]
}
